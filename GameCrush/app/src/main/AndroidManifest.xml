<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alex.gamecrush">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameCrush">
        <activity
            android:name=".aplicacionprincipal.Slider"
            android:exported="true" />
        <activity
            android:name=".aplicacionprincipal.ElegirJuego"
            android:exported="true" />
        <activity
            android:name=".juegozombie.EscenarioJuegoZombie"
            android:exported="true" />
        <activity
            android:name=".aplicacionprincipal.PrimeraVista"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".aplicacionprincipal.Registro"
            android:exported="true" />
        <activity
            android:name=".juegozombie.MenuPrincipalJuegoZombie"
            android:exported="true" />
        <activity
            android:name=".aplicacionprincipal.Login"
            android:exported="true" />
        <activity
            android:name=".aplicacionprincipal.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>